{
  "name": "slack-todoist",
  "description": "Add todo items to your Inbox",
  "repository": "https://github.com/nko5/hicapacity",
  "website": "https://github.com/nko5/hicapacity",
  "keywords": ["slack", "command", "bot", "chat"],
  "env": {
    "CLIENT_ID_TODOIST": {
      "description": "Client id from Todoist.com",
      "required": true
    },
    "CLIENT_SECRET_TODOIST": {
      "description": "Client secret from Todoist.com",
      "required": true
    },
    "MONGO_URI": {
      "description": "Mongo URI",
      "required": true
    },
    "BASE_URL": {
      "description": "Base URL",
      "required": true
    },
    "SLACK_TOKEN": {
      "description": "Optional: Additional security step: Slack slash command token for verification that the request came from your Slack team",
      "required": false
    }
  }
}
